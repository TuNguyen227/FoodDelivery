<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.fooddelivery.Splash"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboarding"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/onboarding"
        android:name="com.example.fooddelivery.onboarding"
        android:label="onboarding"
        tools:layout="@layout/fragment_onboarding"
        >
        <action
            android:id="@+id/action_onboarding_to_welcome"
            app:destination="@id/welcome"
            app:popUpTo="@id/onboarding"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/welcome"
        android:name="com.example.fooddelivery.Welcome"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome"
        >
        <action
            android:id="@+id/action_welcome_to_signIn"
            app:destination="@id/signIn"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.example.fooddelivery.SignIn"
        android:label="SignIn"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />

    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.fooddelivery.SignUp"
        android:label="SignUp"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/signIn"
            app:popUpTo="@id/signIn"
            app:popUpToInclusive="false"/>
    </fragment>

</navigation>